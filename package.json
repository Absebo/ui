{
  "name": "@buttercup/ui",
  "version": "1.4.2",
  "description": "Buttercup UI Components in React",
  "main": "dist/index.js",
  "repository": "git@github.com:buttercup/buttercup-ui.git",
  "author": "Sallar Kaboli <sallar.kaboli@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir dist",
    "build-storybook": "build-storybook",
    "format": "prettier --write '{src,stories,__tests__}/**/*.js'",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 6006",
    "test": "run-s test:unit test:format",
    "test:format": "prettier-check '{src,stories,__tests__}/**/*.js'",
    "test:unit": "jest",
    "test:updateSnapshots": "jest -u"
  },
  "lint-staged": {
    "{src,stories,__tests__}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.js$"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@buttercup/facades": "^0.2.0",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-plugin-jsx-control-statements": "^4.0.0",
    "buttercup": "^2.10.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.3.1",
    "jsx-control-statements": "^3.2.8",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.16.4",
    "prettier-check": "^2.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "@buttercup/generator": "^1.2.0",
    "classnames": "^2.2.5",
    "filter-react-dom-props": "^0.0.2",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "react-icons": "^2.2.7",
    "react-popover": "^0.5.10",
    "zxcvbn": "^4.4.2"
  }
}
