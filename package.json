{
  "name": "@buttercup/ui",
  "version": "1.1.0",
  "description": "Buttercup UI Components in React",
  "main": "dist/index.js",
  "repository": "git@github.com:buttercup/buttercup-ui.git",
  "author": "Sallar Kaboli <sallar.kaboli@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir dist",
    "build-storybook": "build-storybook",
    "deploy": "./deploy",
    "format": "prettier --write '{src,stories,__tests__}/**/*.js'",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 6006",
    "test": "run-s test:unit test:format",
    "test:format": "prettier-check '{src,stories,__tests__}/**/*.js'",
    "test:unit": "jest",
    "test:updateSnapshots": "jest -u"
  },
  "lint-staged": {
    "{src,stories,__tests__}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>__tests__/setup.js",
    "testRegex": "/__tests__/.*\\.spec\\.js$"
  },
  "devDependencies": {
    "@storybook/addons": "^3.3.12",
    "@storybook/react": "^3.3.12",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-react": "^6.22.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jsx-control-statements": "^3.2.8",
    "lint-staged": "^4.3.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "prettier-check": "^2.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.2.1"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.1.6"
  },
  "dependencies": {
    "@buttercup/generator": "^1.2.0",
    "classnames": "^2.2.5",
    "filter-react-dom-props": "^0.0.2",
    "polished": "^1.0.2",
    "prop-types": "^15.6.1",
    "react-icons": "^2.2.7",
    "react-popover": "^0.5.4",
    "zxcvbn": "^4.4.2"
  }
}
