{
  "name": "@buttercup/ui",
  "version": "2.4.0",
  "description": "Buttercup UI Components in React",
  "main": "dist/index.js",
  "repository": "git@github.com:buttercup/buttercup-ui.git",
  "author": "Sallar Kaboli <sallar.kaboli@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && webpack --mode production --config webpack.config.js",
    "build:storybook": "build-storybook",
    "clean": "rimraf dist",
    "dev": "npm run clean && webpack --mode development --config webpack.config.js --progress --watch",
    "format": "prettier --write '{src,stories,__tests__}/**/*.js'",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "test": "run-s test:unit test:format",
    "test:format": "prettier-check '{src,stories,__tests__}/**/*.js'",
    "test:unit": "jest",
    "test:updateSnapshots": "jest -u"
  },
  "files": [
    "dist/**/*"
  ],
  "lint-staged": {
    "{src,stories,__tests__}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.js$"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@buttercup/app-env": "^0.1.1",
    "@buttercup/facades": "^1.6.0",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-loader": "^8.0.6",
    "babel-plugin-jsx-control-statements": "^4.0.0",
    "babel-plugin-ramda": "^2.0.0",
    "buttercup": "^3.0.0-rc3.0",
    "css-loader": "^2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "extract-domain": "^2.2.1",
    "fast-deep-equal": "^2.0.1",
    "file-loader": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "jsx-control-statements": "^3.2.8",
    "lint-staged": "^8.1.3",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "random-words": "^1.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hotkeys": "^1.1.4",
    "rimraf": "^2.7.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "styled-components": "^4.3.2",
    "terser-webpack-plugin": "^1.4.1",
    "uuid": "^3.3.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7"
  },
  "peerDependencies": {
    "@buttercup/facades": ">= 1.6.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.18.0",
    "@blueprintjs/icons": "^3.10.0",
    "@buttercup/generator": "^1.2.0",
    "@buttercup/iconographer": "^1.2.0",
    "@buttercup/react-formatted-input": "^1.3.0",
    "classnames": "^2.2.6",
    "filter-react-dom-props": "^0.0.2",
    "fuse.js": "^3.4.5",
    "otpauth": "^3.2.8",
    "polished": "^1.9.2",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react-icons": "^2.2.7",
    "react-popover": "^0.5.10",
    "react-reflex": "^3.0.22",
    "react-textarea-autosize": "^7.1.0",
    "zxcvbn": "^4.4.2"
  }
}
